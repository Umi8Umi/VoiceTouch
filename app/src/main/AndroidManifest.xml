<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.naist.ahclab.kaldigstreamerclient" 
    xmlns:tools="http://schemas.android.com/tools" > 
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <application
        android:allowBackup="true"
        tools:replace="android:icon"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.naist.ahclab.kaldigstreamerclient.SimpleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.naist.ahclab.kaldigstreamerclient.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="jp.naist.ahclab.kaldigstreamerclient.AboutActivity"
            android:label="@string/txt_btn_about" >
        </activity>
    </application>

</manifest>
